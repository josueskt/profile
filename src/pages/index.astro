---
import Layout from "../layouts/Layout.astro";
import Tecnologias from "../components/tecnologias.astro";
import Menu from "../components/menu.astro";
import Cardproyect from "../components/cardproyect.astro";
---

<Layout title="home">
	<div class="bg-yellow-50 h-screen w-screen">
		<!-- <video
			src="/back.mp4"
			autoplay
			muted
